<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zdialog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>


    <!-- 对话框的默认主题样式 -->
    <style name="zdialog" parent="Theme.AppCompat.Dialog">
        <!-- 提示框是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 提示框是否浮动 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 提示框是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 提示框是否有标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 提示框是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 提示框背景是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 对话框的动画 -->
    <style name="dialog_from_bottom_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_from_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_from_bottom_out</item>
    </style>

    <style name="dialog_from_top_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_from_top_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_from_top_out</item>
    </style>

    <style name="dialog_alpha_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
    </style>

    <!-- 测试按钮样式 -->
    <style name="test_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>